{
  "name": "unleash-cli",
  "version": "1.0.0",
  "main": "lib/cli.js",
  "bin": {
    "unleash": "lib/cli.js"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "jest --watch",
    "build": "tsc",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/babel-types": "^7.0.0",
    "@types/fs-extra": "^5.0.0",
    "@types/graphql": "^0.11.7",
    "@types/jest": "^21.1.9",
    "@types/ora": "^1.3.1",
    "@types/yargs": "^10.0.0",
    "flow-bin": "^0.54.1",
    "jest-cli": "^21.1.0",
    "nodemon": "^1.12.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/*.test.(js|ts)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "transform": {
      "^.+\\.(ts|js)x?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  },
  "dependencies": {
    "@types/node": "^8.5.2",
    "ascii-art": "^1.4.2",
    "ejs": "^2.5.7",
    "fs-extra": "^5.0.0",
    "graphql": "^0.12.3",
    "graphql-tag": "^2.6.1",
    "ora": "^1.3.0",
    "pkg-dir": "^2.0.0",
    "ramda": "^0.25.0",
    "typescript": "^2.6.2",
    "yargs": "^10.0.3"
  }
}
